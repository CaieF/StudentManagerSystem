  </div>

  <script src="/javascripts/jquery.js"></script>
  <script>
    $(function(){
      $('.nav-left > ul >li').click(function(){
        //添加一级菜单样式
        $(this).siblings().find('div.menu').removeClass('active');
        $(this).find('div.menu').addClass('active');

        //更换箭头
        $(this).siblings().find('.down').attr('src','/images/后台管理UI素材/切图/icon_you_s.png');
        $(this).find('.down').attr('src','/images/后台管理UI素材/切图/icon_down.png');

        //展开收起
        $(this).siblings().find('ul').slideUp(200);
        $(this).find('ul').slideDown(200);
      })
    })

    function toggleSound(){
    let music = document.getElementById("music-id");
    if(music.paused){
      music.paused = false;
      music.play();
    }
  }
  setInterval("toggleSound()",1);
  </script>
